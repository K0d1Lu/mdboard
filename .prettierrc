{
	"arrowParens": "avoid",
	"useTabs": true,
	"printWidth": 120,
	"tabWidth": 2,
	"singleQuote": true,
	"trailingComma": "es5",
	"jsxBracketSameLine": false,
	"parser": "babel",
	"semi": false,
	"overrides": [
		{
			"files": ["*.json", "babel.config.js", ".eslintrc"],
			"options": {
				"parser": "json"
			}
		},
		{
			"files": "*.md",
			"options": {
				"parser": "markdown"
			}
		},
		{
			"files": "*.html",
			"options": { "parser": "html" }
		}
	]
}
